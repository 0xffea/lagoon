{
  "name": "@amazeeio/amazee-io-cli",
  "version": "0.1.0",
  "description": "AmazeeIO Commandline Tool",
  "main": "./dist/cli.js",
  "bin": {
    "io": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "prepublish": "npm run dist",
    "preversion": "npm test",
    "version": "npm run dist",
    "postversion": "git push && git push --tags",
    "update-schema": "node scripts/updateSchema.js",
    "clean": "rimraf dist",
    "dist": "npm run clean && npm run build",
    "lint": "eslint src",
    "test": "npm run lint && jest",
    "test:watch": "jest --watch",
    "build": "mkdir -p dist; babel ./src -d dist",
    "watch": "mkdir -p dist; babel --watch=./src -d dist",
    "lint-staged": "lint-staged",
    "flow": "flow check"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AmazeeLabs/amazee-io-cli.git"
  },
  "author": "Patrick Stapfer <patrick@amazee.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AmazeeLabs/amazee-io-cli/issues"
  },
  "homepage": "https://github.com/AmazeeLabs/amazee-io-cli#readme",
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-core": "^6.13.2",
    "babel-eslint": "^6.1.2",
    "babel-jest": "^14.1.0",
    "babel-plugin-syntax-async-functions": "^6.13.0",
    "babel-plugin-transform-flow-strip-types": "^6.18.0",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-plugin-transform-regenerator": "^6.11.4",
    "babel-polyfill": "^6.16.0",
    "babel-preset-es2015": "^6.13.2",
    "eslint": "^3.3.1",
    "eslint-plugin-flow-vars": "^0.5.0",
    "eslint-plugin-flowtype": "^2.25.0",
    "eslint-plugin-graphql": "^0.2.7",
    "flow-bin": "0.35",
    "jest": "17.0.2",
    "lint-staged": "^3.2.1",
    "node-fetch": "^1.6.3",
    "pre-commit": "^1.1.3",
    "rimraf": "^2.5.4"
  },
  "dependencies": {
    "babel-polyfill": "^6.16.0",
    "chalk": "^1.1.3",
    "co": "^4.6.0",
    "graphql": "^0.6.2",
    "js-yaml": "^3.6.1",
    "ramda": "^0.22.1",
    "table": "^4.0.1",
    "yargs": "^5.0.0"
  },
  "jest": {
    "rootDir": "src"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "pre-commit": [
    "flow",
    "lint-staged"
  ]
}
